<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/darktheme"
    tools:context=".YieldPredictionFragment">

    <!-- Latitude -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_latitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Longitude -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_longitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_latitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- NDVI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_ndvi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="NDVI"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_longitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ndvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- GNDVI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_gndvi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="GNDVI"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_ndvi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_gndvi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- NDWI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_ndwi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="NDWI"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_gndvi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ndwi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- SAVI -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_savi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="SAVI"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_ndwi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_savi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Soil Moisture -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_soil_moisture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Soil Moisture (%)"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_savi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_soil_moisture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Temperature -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Temperature (Â°C)"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_soil_moisture">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Rainfall -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_rainfall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Rainfall (mm)"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_temperature">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_rainfall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Crop Type (Dropdown) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_crop_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Crop Type"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_rainfall">

        <AutoCompleteTextView
            android:id="@+id/auto_crop_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_soil_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Soil Type"
        style="@style/OutlinedTextField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_crop_type">

        <AutoCompleteTextView
            android:id="@+id/auto_soil_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Predict Yield Button -->

    <Button
        android:id="@+id/fetchFromApiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Fetch from api"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_predict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_soil_type"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_predict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/green_dark"
        android:text="Predict Yield"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_crop_type" />

</androidx.constraintlayout.widget.ConstraintLayout>
