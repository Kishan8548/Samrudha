<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/darktheme"
    tools:context=".YieldPredictionFragment">

    <!-- Latitude Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_latitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Longitude Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_longitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_latitude"/>

    <!-- NDVI Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_ndvi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="NDVI"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_longitude"/>

    <!-- SAVI Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_savi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="SAVI"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_ndvi"/>

    <!-- Soil Moisture Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_soil_moisture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Soil Moisture (%)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_savi"/>

    <!-- Temperature Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Temperature (Â°C)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_soil_moisture"/>

    <!-- Rainfall Input -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_rainfall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Rainfall (mm)"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:background="@drawable/rounded_input"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/white"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_temperature"/>

    <!-- Crop Type AutoCompleteTextView -->
    <AutoCompleteTextView
        android:id="@+id/auto_crop_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Crop Type"
        android:background="@drawable/rounded_input"
        android:textColor="@color/white"
        android:completionThreshold="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_rainfall"/>

    <!-- Soil Type AutoCompleteTextView -->
    <AutoCompleteTextView
        android:id="@+id/auto_soil_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Soil Type"
        android:background="@drawable/rounded_input"
        android:textColor="@color/white"
        android:completionThreshold="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_crop_type"/>

    <!-- Fetch from API Button -->
    <Button
        android:id="@+id/fetchFromApiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_background"
        android:text="Fetch from API"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_soil_type"/>

    <!-- Predict Yield Button -->
    <Button
        android:id="@+id/btn_predict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_dark"
        android:text="Predict Yield"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fetchFromApiButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
