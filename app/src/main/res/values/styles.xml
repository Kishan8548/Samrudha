<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:background">@drawable/bg_otp_input</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Base application theme -->
    <style name="Theme.Samrudha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorSecondary">@color/gold_accent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- Custom font styles -->
    <style name="AppTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/sen_semibold</item>
    </style>

    <style name="Tagline">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gold_accent</item>
        <item name="android:fontFamily">@font/sen_regular</item>
    </style>

    <style name="InputField">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sen_regular</item>
        <item name="android:textColorHint">#80000000</item>
    </style>




    <style name="FooterText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_primary</item>
        <item name="android:fontFamily">@font/sen_regular</item>
    </style>
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">25sp</item> <!-- Set the font size -->
        <item name="android:textColor">@android:color/white</item> <!-- Set the text color (optional) -->
        <item name="android:fontFamily">@font/sen_bold</item> <!-- Optionally, use your custom font -->
    </style>
</resources>


